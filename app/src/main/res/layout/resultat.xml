<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resultat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >
    
    <GridLayout
        android:id="@+id/grille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Votre score :"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meilleur score :"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/score_perso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 points"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/score_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 points"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:textSize="24dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/joueur_perso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du joueur"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/joueur_global"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du joueur"
            android:layout_gravity="fill_horizontal|center"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginBottom="20dp" />

    </GridLayout>

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/grille"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Vous Ã©tablissez un nouveau record !"
        android:layout_gravity="fill_horizontal|center"
        android:gravity="center"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/et_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:inputType="text"
        android:gravity="center"
        android:text="Anonyme"
        app:layout_constraintTop_toBottomOf="@+id/tv_record"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bouton_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Sauvegarder"
        android:onClick="sauvegarder_score"
        android:textColor="?attr/colorOnPrimary"
        app:backgroundTint="?attr/colorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_record" />

</androidx.constraintlayout.widget.ConstraintLayout>