<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/intitule"
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IntitulÃ© de la question"
        android:layout_gravity="fill_horizontal|center"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/grille"/>

    <GridLayout
        android:id="@+id/grille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
    
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bouton_carre"
            android:fontFamily="@font/delagothicone"
            android:onClick="verifier_reponse"
            android:text="Bonjour"
            android:textColor="?colorOnPrimary"
            android:textAllCaps="false"
            android:layout_row="0"
            android:layout_column="0" />
    
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bouton_carre"
            android:fontFamily="@font/delagothicone"
            android:onClick="verifier_reponse"
            android:text="Bonjour"
            android:textColor="?colorOnPrimary"
            android:textAllCaps="false"
            android:layout_row="0"
            android:layout_column="1" />
    
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bouton_carre"
            android:fontFamily="@font/delagothicone"
            android:onClick="verifier_reponse"
            android:text="Bonjour"
            android:textColor="?colorOnPrimary"
            android:textAllCaps="false"
            android:layout_row="1"
            android:layout_column="0" />
    
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button4"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/bouton_carre"
            android:fontFamily="@font/delagothicone"
            android:onClick="verifier_reponse"
            android:text="Bonjour"
            android:textColor="?colorOnPrimary"
            android:textAllCaps="false"
            android:layout_row="1"
            android:layout_column="1" />
    
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>